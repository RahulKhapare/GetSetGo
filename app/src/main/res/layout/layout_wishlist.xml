<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:gravity="center">

    <com.daimajia.swipe.SwipeLayout
        android:layout_width="325dp"
        android:layout_height="105dp"
        android:elevation="2dp"
        android:id="@+id/swMain"
        android:background="@drawable/bg_elevation">

        <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/delete_swipe_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/trash"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunit_sans_bold"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@color/colorWhite"
                android:textSize="10sp" />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/cardViewMyCourse"
        android:layout_width="325dp"
        android:layout_height="105dp"
        android:background="@drawable/bg_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:paddingRight="3dp">

            <ImageView
                android:id="@+id/imvWishCourse"
                android:layout_width="93dp"
                android:layout_height="97dp"
                android:src="@drawable/download" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/imvWishCourse"
                android:layout_toRightOf="@+id/imvWishCourse"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtWishCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:text="2020 Mobile App Development Bootcamp"
                    android:textColor="@color/main_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtWishProfName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="prof John Doe"
                    android:textColor="@color/main_highlighttext_color"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/rlReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgWishReview1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star_review" />

                        <ImageView
                            android:id="@+id/imgWishReview2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgWishReview1"
                            android:src="@drawable/ic_star_review" />

                        <ImageView
                            android:id="@+id/imgWishReview3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgWishReview2"
                            android:src="@drawable/ic_star_review" />

                        <ImageView
                            android:id="@+id/imgWishReview4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgWishReview3"
                            android:src="@drawable/ic_star_review" />

                        <ImageView
                            android:id="@+id/imgWishReview5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgWishReview4"
                            android:src="@drawable/ic_star_review" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtWishReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/rlReview"
                        android:fontFamily="@font/nunit_sans_bold"
                        android:layout_centerVertical="true"
                        android:text="4.5"
                        android:textColor="@color/main_text_color"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp">

                    <TextView
                        android:id="@+id/txtWishNewPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:fontFamily="@font/nunit_sans_bold"
                        android:gravity="center"
                        android:text="₹ 399.00"
                        android:textColor="@color/main_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtWishOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_marginLeft="7dp"
                        android:layout_toRightOf="@+id/txtWishNewPrice"
                        android:background="@drawable/strike_white_through_line"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:gravity="center"
                        android:text="₹ 699.00"
                        android:textColor="@color/main_highlighttext_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtWishBuyNow"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/txtWishOldPrice"
                        android:fontFamily="@font/nunit_sans_bold"
                        android:gravity="center"
                        android:text="Buy Now"
                        android:textColor="@color/viewall_text_color"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>

</RelativeLayout>
