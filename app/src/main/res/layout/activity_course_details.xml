<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbar_backgound"
    tools:context=".activity.CourseDetailsActivity">


    <RelativeLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/ivBack"
            android:src="@drawable/ic_ham_menu"
            app:tint="@color/colorWhite" />


        <TextView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:fontFamily="@font/nunit_sans_bold"
            android:text="Course Details"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_toolbar"
        android:background="@drawable/main_layout_bg">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/rlBuyNow"
            android:layout_marginTop="30dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rlCourseTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/txtCourseTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:gravity="center"
                        android:text="2020 Web Developement Bootcamp"
                        android:textColor="@color/main_text_color"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlCard"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/rlCourseTitle"
                    android:layout_marginTop="10dp"
                    android:gravity="center">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/llMain"
                        android:layout_width="328dp"
                        android:layout_height="187dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/ivCourseImage"
                            android:layout_width="314dp"
                            android:layout_height="176dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/images"
                            app:riv_corner_radius="10dp"/>

                            <RelativeLayout
                                android:id="@+id/rlFrame"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/bg_play_back">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerVertical="true"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_play"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Preview This Course"
                                    android:fontFamily="@font/nunit_sans_bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textColor="@color/colorWhite"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="10dp"/>

                            </RelativeLayout>

                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlCard"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txtCouseProfName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:text="prof John Doe"
                            android:textColor="@color/main_highlighttext_color"
                            android:textSize="12sp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_toRightOf="@+id/txtViewCategory">

                            <ImageView
                                android:id="@+id/ivShare"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="15dp"
                                android:layout_toLeftOf="@+id/chcCourseFav"
                                android:src="@drawable/ic_share" />

                            <CheckBox
                                android:id="@+id/chcCourseFav"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="2dp"
                                android:button="@drawable/favorite_checkox" />

                        </RelativeLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:gravity="center">

                        <RelativeLayout
                            android:id="@+id/rlReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imgViewCategoryReview1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_star_review" />

                            <ImageView
                                android:id="@+id/imgViewCategoryReview2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/imgViewCategoryReview1"
                                android:src="@drawable/ic_star_review" />

                            <ImageView
                                android:id="@+id/imgViewCategoryReview3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/imgViewCategoryReview2"
                                android:src="@drawable/ic_star_review" />

                            <ImageView
                                android:id="@+id/imgViewCategoryReview4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/imgViewCategoryReview3"
                                android:src="@drawable/ic_star_review" />

                            <ImageView
                                android:id="@+id/imgViewCategoryReview5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/imgViewCategoryReview4"
                                android:src="@drawable/ic_star_review" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txtViewCategoryReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/rlReview"
                            android:fontFamily="@font/nunit_sans_bold"
                            android:gravity="center"
                            android:text="4.5"
                            android:textColor="@color/main_text_color"
                            android:textSize="10sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:id="@+id/txtViewCategoryNewPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:fontFamily="@font/nunit_sans_bold"
                            android:gravity="center"
                            android:text="₹ 399.00"
                            android:textColor="@color/main_text_color"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtViewCategoryOldPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:layout_marginLeft="7dp"
                            android:layout_toRightOf="@+id/txtViewCategoryNewPrice"
                            android:background="@drawable/strike_white_through_line"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:text="₹ 699.00"
                            android:textColor="@color/main_highlighttext_color"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtCourseDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:text="50% off - Only 2 days left at this price"
                        android:textColor="@color/viewall_text_color"
                        android:textSize="10sp" />


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlCourseIns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llDetails"
                    android:layout_marginTop="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorStrokeView"
                        android:paddingTop="10dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/txttitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_sans_semibold"
                            android:text="This Course Includes"
                            android:textColor="@color/main_text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtCourseIncludes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txttitle"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:textColor="@color/main_highlighttext_color"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlCourseLearn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlCourseIns"
                    android:layout_marginTop="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorStrokeView"
                        android:paddingTop="10dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/txttle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_sans_semibold"
                            android:text="What will i learn? "
                            android:textColor="@color/main_text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtLearn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txttle"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:textColor="@color/main_highlighttext_color"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtViewMore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtLearn"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="View more"
                            android:fontFamily="@font/nunit_sans_bold"
                            android:textColor="@color/viewall_text_color"
                            android:textSize="12sp" />

                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlCourseLearn"
                    android:layout_marginTop="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorStrokeView"
                        android:paddingTop="10dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/txtTitleDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_sans_semibold"
                            android:text="Description"
                            android:textColor="@color/main_text_color"
                            android:textSize="16sp" />

                        <com.borjabravo.readmoretextview.ReadMoreTextView
                            android:id="@+id/txtDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtTitleDesc"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            app:trimLines="5"
                            app:trimExpandedText="Show more"
                            app:trimCollapsedText="Show less"
                            app:colorClickableText="@color/viewall_text_color"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:textColor="@color/main_highlighttext_color"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlCur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlDesc"
                    android:layout_marginTop="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorStrokeView"
                        android:paddingTop="10dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                       >

                        <TextView
                            android:id="@+id/txtTitleCur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_sans_semibold"
                            android:text="Curriculum"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:textColor="@color/main_text_color"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/txtTimeLect"
                            android:layout_below="@+id/txtTitleCur"
                            android:layout_width="match_parent"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:text="Lectures(400) Total time(50h 10 m)"
                            android:textColor="@color/colorTextHighLight"
                            android:textSize="14sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/txtTimeLect"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/recyclerViewLecture"/>

                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/rlBuyNow"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_button_corner"
            android:elevation="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txtBuyNow"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/button_dark_bg"
                android:fontFamily="@font/nunit_sans_bold"
                android:gravity="center"
                android:text="Buy Now"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
