<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:id="@+id/lnrBestSaller"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/llMain"
                android:layout_width="match_parent"
                android:layout_height="143dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ivCourseImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_no_image" />
            </androidx.cardview.widget.CardView>

            <!--    //</androidx.cardview.widget.CardView>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llMain"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/txtCourseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:text="@string/app_name"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtProfName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="@string/app_name"
                    android:textColor="@color/main_highlighttext_color"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/rlReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgReview1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:src="@drawable/ic_star_review" />

                        <ImageView
                            android:id="@+id/imgReview2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_toRightOf="@id/imgReview1"
                            android:src="@drawable/ic_star_review" />

                        <ImageView
                            android:id="@+id/imgReview3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgReview2"
                            android:visibility="gone"
                            android:src="@drawable/ic_star_review" />

                        <ImageView
                            android:id="@+id/imgReview4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgReview3"
                            android:visibility="gone"

                            android:src="@drawable/ic_star_review" />

                        <ImageView
                            android:id="@+id/imgReview5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_toRightOf="@id/imgReview4"
                            android:src="@drawable/ic_star_review" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/rlReview"
                        android:fontFamily="@font/nunit_sans_bold"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorTextDark"
                        android:textSize="12sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/txtNewPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nunit_sans_bold"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="@color/colorTextDark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtOldPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="2dp"
                            android:layout_toRightOf="@+id/txtNewPrice"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/main_highlighttext_color"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imgShare"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_share_yellow">

                    </ImageView>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtBestSeller"
                    android:layout_width="74dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_bestseller"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="BestSeller"
                    android:textColor="@color/colorTextDark"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>