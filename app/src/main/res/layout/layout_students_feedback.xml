<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llProfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/x8"
    android:paddingVertical="@dimen/x6">


    <RelativeLayout
        android:id="@+id/rlReview"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:gravity="start|center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgWishReview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_review" />

        <ImageView
            android:id="@+id/imgWishReview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgWishReview1"
            android:src="@drawable/ic_star_review" />

        <ImageView
            android:id="@+id/imgWishReview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgWishReview2"
            android:src="@drawable/ic_star_review" />

        <ImageView
            android:id="@+id/imgWishReview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgWishReview3"
            android:src="@drawable/ic_star_review" />

        <ImageView
            android:id="@+id/imgWishReview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgWishReview4"
            android:src="@drawable/ic_star_review" />

    </RelativeLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivProfile"
        android:layout_width="@dimen/x58"
        android:layout_height="@dimen/x58"
        android:padding="@dimen/x6"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:riv_corner_radius="@dimen/x24"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtFedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlReview"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/nunito_sans_regular"
            android:text="@string/dummy_text"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="@dimen/x0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_sans_semibold"
                android:paddingVertical="@dimen/x2"
                android:text="John Doe 2 months ago"
                android:textColor="@color/colorTextHint60"
                android:textSize="12sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/txtDesignation"
                android:layout_width="@dimen/x0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_sans_semibold"
                android:paddingVertical="@dimen/x2"
                android:text="John Doe 2 months ago"
                android:textColor="@color/colorTextHint60"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
