<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="93dp"
    android:layout_marginTop="5dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/cardViewMySpecailOffer"
        android:layout_width="323dp"
        android:layout_height="85dp"
        android:background="@drawable/bg_dash_elevation"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingTop="5dp"
            android:layout_gravity="center"
            android:paddingRight="3dp"
            android:paddingBottom="5dp"
            android:weightSum="10">

            <ImageView
                android:id="@+id/imvSpecial"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="2.5"
                android:layout_gravity="center"
                android:src="@drawable/ic_specia_offer" />

            <LinearLayout
                android:id="@+id/llMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txttCongratsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:text="Congratulations!!!"
                    android:textColor="@color/colorCourseBoard"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtCongratsDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:maxLines="3"
                    android:paddingRight="2dp"
                    android:text="You have successfully completed the course. Download your Certificate"
                    android:textColor="@color/colorTextHighLight"
                    android:textSize="10sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imvcelebrate"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="2.5"
                android:layout_gravity="center"
                android:src="@drawable/ic_celebrate" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
