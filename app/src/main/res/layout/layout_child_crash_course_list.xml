<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:id="@+id/lnrCourse"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:elevation="@dimen/x6"
        app:cardCornerRadius="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivCourseImage"
            android:layout_width="240dp"
            android:layout_height="134dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_wp"
            app:riv_corner_radius="10dp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llMain"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/txtCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:text="@string/app_name"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_regular"
            android:text="@string/app_name"
            android:textColor="@color/main_highlighttext_color"
            android:textSize="12sp" />



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginTop="1dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txtNewPrice"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:fontFamily="@font/nunit_sans_bold"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/colorTextDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/txtNewPrice"
                android:fontFamily="@font/nunito_sans_regular"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/main_highlighttext_color"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>