<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_margin="@dimen/x4"
    app:cardCornerRadius="@dimen/x10"
    app:cardElevation="@dimen/x4">

    <RelativeLayout
        android:id="@+id/lnrBestSaller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivCourseImage"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:scaleType="fitXY"
                android:src="@drawable/download"
                app:riv_corner_radius="5dp" />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCourseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:text="@string/app_name"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/txtProfName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="@string/app_name"
                    android:textColor="@color/main_highlighttext_color"
                    android:textSize="12sp" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/rlReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgReview1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:src="@drawable/ic_star_review" />

                        <ImageView
                            android:id="@+id/imgReview2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_toRightOf="@id/imgReview1"
                            android:src="@drawable/ic_star_review" />

                        <ImageView
                            android:id="@+id/imgReview3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgReview2"
                            android:visibility="gone"
                            android:src="@drawable/ic_star_review" />

                        <ImageView
                            android:id="@+id/imgReview4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgReview3"
                            android:visibility="gone"

                            android:src="@drawable/ic_star_review" />

                        <ImageView
                            android:id="@+id/imgReview5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_toRightOf="@id/imgReview4"
                            android:src="@drawable/ic_star_review" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/rlReview"
                        android:fontFamily="@font/nunit_sans_bold"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorTextDark"
                        android:textSize="12sp" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp">

                        <TextView
                            android:id="@+id/txtNewPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nunit_sans_bold"
                            android:gravity="center"
                            android:text=""
                            android:layout_marginTop="5dp"
                            android:textColor="@color/colorTextDark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtOldPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="2dp"
                            android:layout_toRightOf="@+id/txtNewPrice"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/main_highlighttext_color"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imgShare"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_share_yellow"></ImageView>

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>