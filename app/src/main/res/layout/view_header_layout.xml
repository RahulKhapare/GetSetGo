<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:background="@color/colorWhite">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="16dp">

                <ImageView
                    android:id="@+id/ivCancel"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:onClick="Cancel"
                    android:src="@drawable/ic_close_draw"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtName"
                    android:fontFamily="@font/nunit_sans_bold"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/ivCancel"
                    android:text="John Doe"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEmail"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:textSize="14sp"
                    android:layout_below="@+id/txtName"
                    android:text="JohnDoe@gmail.com"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtProfile"
                    android:fontFamily="@font/nunit_sans_bold"
                    android:textSize="10sp"
                    android:textColor="@color/colorTextProfile"
                    android:layout_below="@+id/txtEmail"
                    android:text="Business Profile"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rlMain"
                android:background="@color/colorStrokeView"
                android:paddingTop="10dp"></View>

        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>