<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/cardViewMySpecailOffer"
        android:layout_width="323dp"
        android:layout_height="85dp"
        android:background="@drawable/bg_sepcial_image"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingTop="5dp"
            android:paddingRight="3dp"
            android:paddingBottom="5dp"
            android:weightSum="10">

            <ImageView
                android:id="@+id/imvSpecial"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="2.5"
                android:src="@drawable/ic_specia_offer" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="7.5"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingRight="3dp">

                <TextView
                    android:id="@+id/txtSpecialTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:text="Buy courses at Half price!!!"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtSpecialDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:maxLines="3"
                    android:paddingRight="2dp"
                    android:text="Lorem ipsum dolor sit amet, conseteturLorem ipsum dolor sit amet, consetetur sadipscing elitr."
                    android:textColor="@color/colorWhiteTrans"
                    android:textSize="10sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
