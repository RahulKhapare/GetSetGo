<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llAdditionalFiles"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/x8">

    <TextView
        android:id="@+id/txtChapterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_semibold"
        android:text="Chapter 1"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/font_size_x14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/txtFileName"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight=".95"
            android:fontFamily="@font/nunit_sans_bold"
            android:marqueeRepeatLimit="3"
            android:maxLines="1"
            android:paddingVertical="@dimen/x2"
            android:text="workbook_Students_Brain_Booster1.pdf"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/font_size_x14" />

        <ImageView
            android:id="@+id/ivFileDownload"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:src="@drawable/ic_download" />

    </LinearLayout>

</LinearLayout>