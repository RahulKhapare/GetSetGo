<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/toolbar_backgound">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_layout_bg">
            <!---->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScroll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="30dp"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_sans_semibold"
                            android:text="Register As"
                            android:textColor="@color/colorTextDark"
                            android:textSize="18sp">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioIndividual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorTextDark"
                                android:checked="true"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="Individual"
                                android:textSize="18sp">

                            </RadioButton>

                            <RadioButton
                                android:id="@+id/radioCompany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:backgroundTint="@color/colorTextDark"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="Company"
                                android:textSize="18sp">

                            </RadioButton>

                        </LinearLayout>


                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/colorTextHint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorTextDark"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:hint="First Name"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:textColor="@color/colorTextDark"
                            android:textColorHint="@color/colorTextHint" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/colorTextHint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorTextDark"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:hint="Last Name"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:textColor="@color/colorTextDark"
                            android:textColorHint="@color/colorTextHint" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/colorTextHint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorTextDark"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:hint="Email"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/colorTextDark"
                            android:textColorHint="@color/colorTextHint" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:weightSum="10">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_weight="2.8"
                            android:layout_height="?actionBarSize"
                            android:textColorHint="@color/colorTextHint">

                            <AutoCompleteTextView
                                android:id="@+id/actvIsdCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorTextDark"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:hint="Eg. +91"
                                android:maxLength="4"
                                android:drawableRight="@drawable/ic_down_spin"
                                android:imeOptions="actionNext"
                                android:textColor="@color/colorTextDark"
                                android:textColorHint="@color/colorTextHint" />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_marginLeft="10dp"
                            android:layout_height="?actionBarSize"
                            android:textColorHint="@color/colorTextHint">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorTextDark"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:hint="Contact Number"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:textColor="@color/colorTextDark"
                                android:textColorHint="@color/colorTextHint" />

                        </com.google.android.material.textfield.TextInputLayout>




                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/colorTextHint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etContactNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorTextDark"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:hint="Contact Number"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:textColor="@color/colorTextDark"
                            android:textColorHint="@color/colorTextHint" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/colorTextHint"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorTextDark"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:hint="Password"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:textColor="@color/colorTextDark"
                            android:textColorHint="@color/colorTextHint" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/spnStatus"
                                style="@style/SpinnerTextViewItem"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="end|center"
                                android:background="@null"
                                android:dropDownVerticalOffset="40dp"
                                android:gravity="start|center_vertical"
                                android:singleLine="true"
                                android:spinnerMode="dropdown" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="33dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:src="@drawable/ic_down_spin"
                                    android:layout_marginRight="7dp"
                                    app:tint="@color/colorTextDark" />
                            </RelativeLayout>
                        </FrameLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_below="@+id/spnStatus"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/underline" />


                    <TextView
                        android:id="@+id/txtSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/button_dark_bg"
                        android:fontFamily="@font/nunit_sans_bold"
                        android:gravity="center"
                        android:padding="20dp"
                        android:paddingBottom="20dp"
                        android:text="Save"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </RelativeLayout>
</layout>

